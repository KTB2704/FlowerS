<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:layout_marginBottom="7dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="7dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout9"
        android:layout_width="444dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/Name"
            android:layout_width="127dp"
            android:layout_height="43dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="5dp"
            android:text="Họ và tên"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DateAndDay" />

        <TextView
            android:id="@+id/OrderId"
            android:layout_width="127dp"
            android:layout_height="20dp"
            android:layout_marginStart="13dp"
            android:text="OrderId"
            android:textColor="#B2B2B2"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Name" />

        <TextView
            android:id="@+id/Location"
            android:layout_width="259dp"
            android:layout_height="61dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="19dp"
            android:text="Location"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="166dp"
            android:layout_marginTop="5dp"
            android:text="PhoneNumber"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Location" />

        <TextView
            android:id="@+id/DateAndDay"
            android:layout_width="153dp"
            android:layout_height="19dp"
            android:layout_marginStart="13dp"
            android:text="date and  day"
            android:textColor="#E48E8E"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView51"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="9dp"
            android:background="@drawable/grey_bg"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Phone" />

        <TextView
            android:id="@+id/textView53"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="7dp"
            android:text="Sản phẩm"
            android:textColor="#7E7E7E"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView51" />

        <TextView
            android:id="@+id/productQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="7dp"
            android:text="100"
            android:textColor="#E48E8E"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView53" />

        <TextView
            android:id="@+id/textView63"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="13dp"
            android:gravity="center"
            android:text="Thành tiền"
            android:textColor="#7E7E7E"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/textView68"
            app:layout_constraintStart_toEndOf="@+id/textView53"
            app:layout_constraintTop_toBottomOf="@+id/textView51" />

        <TextView
            android:id="@+id/AllTotalPrice"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="17dp"
            android:gravity="center"
            android:text="10000000"
            android:textColor="#E48E8E"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/Status"
            app:layout_constraintTop_toBottomOf="@+id/textView63"
            />

        <TextView
            android:id="@+id/textView68"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="9dp"
            android:gravity="center"
            android:text="Tình trạng"
            android:textColor="#7E7E7E"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView51" />

        <TextView
            android:id="@+id/Status"
            android:layout_width="96dp"
            android:layout_height="47dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="9dp"
            android:gravity="center|top"
            android:lineSpacingMultiplier="1.3"
            android:text="Đang giao hàng"
            android:textSize="15sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView68" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>