<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgF"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:background="@drawable/white_bg3"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="282dp"
            android:layout_height="58dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:gravity="left"
            android:text="TextView"
            android:textSize="27sp"
            app:layout_constraintStart_toEndOf="@+id/imgF"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtQuantity"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:gravity="center|left"
            android:text="1"
            android:textColor="#D17D71"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/textView38"
            app:layout_constraintTop_toBottomOf="@+id/txtName" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:text="X"
            android:textColor="#D17D71"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/txtQuantity"
            app:layout_constraintTop_toBottomOf="@+id/txtName" />

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="107dp"
            android:layout_height="29dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="7dp"
            android:gravity="center|right"
            android:text="1000000"
            android:textColor="#D17D71"
            android:textSize="23sp"
            app:layout_constraintEnd_toStartOf="@+id/textView34"
            app:layout_constraintTop_toBottomOf="@+id/txtName" />

        <TextView
            android:id="@+id/textView38"
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:layout_marginBottom="24dp"
            android:gravity="center|left"
            android:text="="
            android:textColor="#D17D71"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txtPriceTotal" />

        <TextView
            android:id="@+id/txtPriceTotal"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="24dp"
            android:gravity="center|right"
            android:text="10000000"
            android:textColor="#D17D71"
            android:textSize="23sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>